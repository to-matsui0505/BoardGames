{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "ES2020",
    "outDir": "wwwroot/js",
    "rootDir": "Scripts",
    "module": "ES2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "include": [ "Scripts" ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}